{% set pypi_name = 'XStatic-Angular-Vis' %}
{% set upstream_version = upstream_version('4.16.0.0') %}
{% set rpm_release = '1' %}
{% set source = url_pypi() %}

Name:           {{ py2name(py_versions='py3') }}
Version:        {{ py2rpmversion() }}
Release:        {{ py2rpmrelease() }}
Summary:        Angular-Vis JavaScript library (XStatic packaging standard)
License:        {{ license('MIT') }}
Group:          Development/Languages/Python
URL:            https://docs.openstack.org/xstatic-angular-vis/
Source0:        {{ source }}
BuildRequires:  openstack-macros
BuildRequires:  {{ py3('XStatic') }}
BuildRequires:  {{ py3('setuptools') }}
BuildArch:      noarch

%description
Angular-Vis JavaScript library packaged for setuptools (easy_install) / pip.

%prep
%autosetup -p1 -n {{ pypi_name }}-{{ upstream_version }}
%py_req_cleanup

%build
%{py3_build}

%install
%{py3_install}

%files
%doc README.txt
%{python3_sitelib}/xstatic
%{python3_sitelib}/XStatic*

%changelog
